local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "Hitbox changer",
   Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
   LoadingTitle = "Thx for using my script",
   LoadingSubtitle = "by Valvvm",
   Theme = "Default", -- Check https://docs.sirius.menu/rayfield/configuration/themes

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },

   KeySystem = true, -- Set this to true to use our key system
   KeySettings = {
      Title = "Key",
      Subtitle = "Key System",
      Note = "Just dm", -- Use this to tell the user how to get a key
      FileName = "Key", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"Hitbox"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
})
local Tab = Window:CreateTab("Hitbox", 4483362458) -- Title, Image
local Section = Tab:CreateSection("Hitbox yeye")
local Button = Tab:CreateButton({
   Name = "Hitbox Super deadly",
   Callback = function()
-- Acceder al personaje del jugador
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Encontrar una parte en el personaje, por ejemplo, el torso
local torso = character:WaitForChild("UpperTorso")

-- Hacer que la hitbox sea super grande
torso.Size = Vector3.new(100, 100, 100)  -- Cambia estos valores para ajustar el tamaño de la hitbox

-- Forzar que la parte tenga colisión
torso.CanCollide = true

-- Hacer que la hitbox sea visible o invisible (opcional)
torso.Transparency = 0  -- Cambia a 1 para que sea invisible

-- Si quieres que la hitbox sea mucho más grande que solo una parte, puedes modificar otras partes también
local lowerTorso = character:WaitForChild("LowerTorso")
lowerTorso.Size = Vector3.new(100, 100, 100)

-- Modificar otras partes del cuerpo también (si lo deseas)
local head = character:WaitForChild("Head")
head.Size = Vector3.new(100, 100, 100)

-- Cambiar las propiedades de colisión de otras partes si es necesario
head.CanCollide = true
lowerTorso.CanCollide = true
   end,
})
